        <result column="sex" property="sex"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="birthday" property="birthday"/>
        <result column="corp_code" property="corp_code"/>
        <result column="store_code" property="store_code"/>
        <result column="role_code" property="role_code"/>
        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="isactive" property="isactive"/>
        <association property="role" javaType="com.bizvane.ishop.entity.Role">
            <result column="role_name" property="role_name"/>
        </association>
    </resultMap>

    <select id="selectAllUser" resultMap="UserInfo">
        select DEF_USER.id,
        user_code,
        user_name,
        sex,
        avatar,
        phone,
        email,
        birthday,
        store_code,
        DEF_USER.role_code,
        DEF_USER.corp_code,
        login_time_recently,
        DEF_USER.modified_date,
        DEF_USER.modifier,
        DEF_USER.created_date,
        DEF_USER.creater,
        DEF_USER.isactive,
        DEF_ROLE.role_name
        from DEF_USER,DEF_ROLE
        where DEF_USER.role_code = DEF_ROLE.role_code
        <if test="corp_code != null and corp_code !=''">
            AND DEF_USER.CORP_CODE = #{corp_code}
        </if>
        <if test="search_value != null and search_value !=''">
            AND USER_NAME like #{search_value}
            OR DEF_USER.ID like #{search_value}
            OR USER_CODE like #{search_value}
            OR PHONE like #{search_value}
            OR SEX like #{search_value}
            OR DEF_ROLE.role_name like #{search_value}
            OR LOGIN_TIME_RECENTLY like #{search_value}
            OR DEF_USER.MODIFIED_DATE like #{search_value}
            OR DEF_USER.MODIFIER like #{search_value}
            OR DEF_USER.ISACTIVE like #{search_value}
        </if>
        ORDER BY ID
    </select>

    <select id="selectUserById" resultMap="UserInfo">
        select DEF_USER.id,
        user_code,
        user_name,
        sex,
        avatar,
        phone,
        email,
        birthday,
        password,
        login_time_recently,
        store_code,
        DEF_USER.role_code,
        DEF_USER.corp_code,
        DEF_USER.modified_date,
        DEF_USER.modifier,
        DEF_USER.created_date,
        DEF_USER.creater,
        DEF_USER.isactive,
        DEF_ROLE.role_name
        from DEF_USER,DEF_CORP,DEF_ROLE
        where DEF_USER.role_code = DEF_ROLE.role_code
            AND DEF_USER.ID = #{user_id}
    </select>

    <select id="selectByPhone" resultMap="BaseMap">
        select *
        from DEF_USER
        where
            PHONE = #{phone}
    </select>
    <select id="selectLogin" resultMap="BaseMap">
        SELECT *
        FROM DEF_USER
        WHERE PHONE = #{0}
        OR EMAIL = #{0}
        AND PASSWORD = #{1}
        AND ISACTIVE = 'Y'
    </select>

    <select id="selectUserCode" resultMap="BaseMap">
    select *
    from DEF_USER
    WHERE
    USER_CODE = #{0} AND CORP_CODE = #{1}
   </select>

    <select id="selectStoreUser" resultType="com.bizvane.ishop.entity.User">
        SELECT *
        FROM DEF_USER
        WHERE CORP_CODE = #{corp_code}
        AND store_code like #{search_value}
        AND ISACTIVE = 'Y'
    </select>

    <delete id="deleteByUserId">
        delete from
        DEF_USER
        where ID = #{id}
    </delete>
