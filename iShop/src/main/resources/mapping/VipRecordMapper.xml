<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.VipRecordMapper">

    <resultMap id="VipInfos" type="com.bizvane.ishop.entity.VipRecord">
        <id column="id" property="id"/>
        <result column="vip_code" property="vip_code"/>
        <result column="user_code" property="user_code"/>
        <result column="action" property="action"/>
        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="isactive" property="isactive"/>
        <result column="created_date" property="created_date"/>
        <result column="creater" property="creater"/>
        <result column="corp_code" property="corp_code"/>
        <association property="vipinfo" javaType="com.bizvane.ishop.entity.VIPInfo">
            <result column="vip_name" property="vip_name"/>
        </association>
        <association property="user" javaType="com.bizvane.ishop.entity.User">
            <result column="user_name" property="user_name"/>
        </association>
    </resultMap>

    <select id="selecctById" resultType="com.bizvane.ishop.entity.VipRecord">
        select * from DEF_VIP_RECORD
        WHERE id=#{id}
    </select>


    <insert id="insert" parameterType="com.bizvane.ishop.entity.VipRecord">
        INSERT INTO DEF_VIP_RECORD
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="vip_code!=null and  vip_code!=''">
                vip_code,
            </if>
            <if test="user_code!=null and user_code!=''">
                user_code ,
            </if>

            <if test="action!=null and action!=''">
                action,
            </if>
            <if test="modified_date!=null">
                modified_date ,
            </if>
            <if test="modifier!=null and modifier!=''">
                modifier ,
            </if>
            <if test="isactive!=null and isactive!=''">
                isactive ,
            </if>
            <if test="created_date!=null">
                created_date,
            </if>
            <if test="creater!=null and  creater!=''">
                creater ,
            </if>
        </trim>
        <trim prefix="values(" suffixOverrides="," suffix=")">
            <if test="vip_code!=null and  vip_code!=''">
                #{vip_code},
            </if>
            <if test="user_code!=null and user_code!=''">
                #{user_code},
            </if>
            <if test="action!=null and action!=''">
                #{action},
            </if>
            <if test="modified_date!=null">
                #{modified_date},
            </if>

            <if test="modifier!=null and modifier!=''">
                #{modifier} ,
            </if>
            <if test="isactive!=null and isactive!=''">
                #{isactive},
            </if>
            <if test="created_date!=null">
                #{created_date},
            </if>
            <if test="creater!=null and  creater!=''">
                #{creater},
            </if>
        </trim>
    </insert>
    <delete id="deleteByPrimary">
        DELETE FROM
        DEF_VIP_RECORD
        WHERE id=#{id}
    </delete>
    <select id="selectAllVipRecordInfo" resultMap="VipInfos">
        select
        dvc.id ,
        dvc.vip_code ,
        dvc.user_code,
        dvc.action,
        dvc.modified_date ,
        dvc.modifier,
        dvc.isactive,
        dvc.created_date ,
        dvc.creater,
        dv.vip_name,
        du.user_name
        from DEF_VIP_RECORD dvc,DEF_VIP dv,DEF_USER du
        WHERE dvc.vip_code=dv.vip_code and dvc.user_code=du.user_code
        <if test="corp_code!=null and corp_code!=''">
            dvc.corp_code=#{corp_code}
        </if>
        <if test="search_value!=null and search_value!=''">
            and (
            dv.vip_name like concat('%',#{search_value},'%')
            or dvc.modified_date like concat('%',#{search_value},'%')
            or dvc.isactive like concat('%',#{search_value},'%')
            or dvc.action like concat('%',#{search_value},'%')
            )
        </if>
        ORDER BY dvc.id
    </select>

    <update id="updateByPrimaryKey" parameterType="com.bizvane.ishop.entity.VipRecord">
        update DEF_VIP_RECORD
        <trim prefix="set" suffixOverrides=",">
            <if test="vip_code!=null and  vip_code!=''">
                vip_code=#{vip_code},
            </if>
            <if test="user_code!=null and user_code!=''">
                user_code=#{user_code},
            </if>

            <if test="action!=null and action!=''">
                action=#{action},
            </if>

            <if test="modified_date!=null">
                modified_date=#{modified_date},
            </if>
            <if test="modifier!=null and modifier!=''">
                modifier=#{modifier},
            </if>
            <if test="isactive!=null and isactive!=''">
                isactive=#{isactive},
            </if>
            <if test="created_date!=null">
                created_date=#{created_date},
            </if>
            <if test="creater!=null and  creater!=''">
                creater=#{creater},
            </if>
        </trim>
        WHERE id=#{id}
    </update>

</mapper>