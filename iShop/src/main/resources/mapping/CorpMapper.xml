<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.CorpMapper">
    <resultMap id="CorpInfo" type="com.bizvane.ishop.entity.Corp">
        <id column="id" property="id"/>
        <result column="corp_code" property="corp_code"/>
        <result column="corp_name" property="corp_name"/>
        <result column="address" property="address"/>
        <result column="contact" property="contact"/>
        <result column="contact_phone" property="contact_phone"/>

        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="created_date" property="created_date"/>
        <result column="creater" property="creater"/>
        <result column="isactive" property="isactive"/>
    </resultMap>

    <select id="selectByCorpName" resultMap="CorpInfo">
        select * from DEF_CORP WHERE
        corp_name=#{corp_name}
    </select>

    <select id="selectByCorpId" resultType="com.bizvane.ishop.entity.Corp">
        select *
        from DEF_CORP
        where
        <if test="corp_id != 0">
            ID = #{corp_id}
        </if>
        <if test="corp_code != null and corp_code !=''">
            CORP_CODE = #{corp_code}
        </if>
    </select>


    <select id="selectAllCorp" resultMap="CorpInfo">
        select *
        from DEF_CORP
        where 1 = 1
        <if test="search_value != null and search_value !=''">
            AND
            (
            corp_name like concat('%', #{search_value},'%')
            OR corp_code like concat('%', #{search_value},'%')
            OR address like concat('%', #{search_value},'%')
            OR contact like concat('%', #{search_value},'%')
            OR contact_phone like concat('%', #{search_value},'%')
            /* OR CAST(MODIFIED_DATE as DATE) like concat('%', ,#{search_value},'%')*/
            OR MODIFIED_DATE LIKE concat('%',#{search_value},'%')
            OR MODIFIER like concat('%', #{search_value},'%')
            OR isactive like concat('%', #{search_value},'%')
            )
        </if>
        ORDER BY corp_code
    </select>

    <select id="selectCorps" resultMap="CorpInfo">
    select *
    from DEF_CORP
    where isactive = 'Y'
    ORDER BY corp_code
    </select>

    <select id="selectMaxCorpCode" resultType="java.lang.String">
    select max(CORP_CODE) from DEF_CORP
    </select>

    <insert id="insertCorp" parameterType="com.bizvane.ishop.entity.Corp">

        insert into DEF_CORP
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="corp_name != null">
                CORP_NAME,
            </if>
            <if test="corp_code != null">
                CORP_CODE,
            </if>
            <if test="address != null">
                ADDRESS,
            </if>
            <if test="contact != null">
                CONTACT,
            </if>
            <if test="contact_phone != null">
                CONTACT_PHONE,
            </if>
            <if test="app_id != null">
                app_id,
            </if>
            <if test="modified_date != null">
                MODIFIED_DATE,
            </if>
            <if test="modifier != null">
                modifier,
            </if>
            <if test="created_date != null">
                CREATED_DATE,
            </if>
            <if test="creater != null">
                creater,
            </if>
            <if test="isactive != null">
                isactive,
            </if>
            <if test="avater!=null and avater!=''">
                avater,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="corp_name != null">
                #{corp_name},
            </if>
            <if test="corp_code != null">
                #{corp_code},
            </if>
            <if test="address != null">
                #{address},
            </if>
            <if test="contact != null">
                #{contact},
            </if>
            <if test="contact_phone != null">
                #{contact_phone},
            </if>
            <if test="app_id != null">
                #{app_id},
            </if>
            <if test="modified_date != null">
                #{modified_date},
            </if>
            <if test="modifier != null">
                #{modifier},
            </if>
            <if test="created_date != null">
                #{created_date},
            </if>
            <if test="creater != null">
                #{creater},
            </if>
            <if test="isactive != null">
                #{isactive},
            </if>
            <if test="avater!=null and avater!=''">
                #{avater},
            </if>
        </trim>

    </insert>

    <update id="updateByCorpId" parameterType="com.bizvane.ishop.entity.User">
        UPDATE DEF_CORP
        <trim prefix="SET" suffixOverrides=",">
            <if test="corp_name != null">
                corp_name = #{corp_name},
            </if>
            <if test="corp_code != null">
                corp_code = #{corp_code},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="contact != null">
                contact = #{contact},
            </if>
            <if test="contact_phone != null">
                contact_phone = #{contact_phone},
            </if>
            <if test="app_id != null">
                app_id = #{app_id},
            </if>
            <if test="modified_date != null">
                modified_date = #{modified_date},
            </if>
            <if test="modifier != null">
                modifier = #{modifier},
            </if>
            <if test="created_date != null">
                created_date = #{created_date},
            </if>
            <if test="creater != null">
                creater = #{creater},
            </if>
            <if test="isactive != null">
                isactive = #{isactive},
            </if>
            <if test="avater!=null and avater!=''">
                avater=#{avater},
            </if>
        </trim>
        WHERE ID = #{id};
    </update>

    <delete id="deleteByCorpId">
        delete from
        DEF_CORP
        where ID = #{id}
    </delete>

    <select id="selectByUser_id" resultType="com.bizvane.ishop.entity.Corp">
        select * from DEF_CORP where corp_code=(select corp_code from DEF_USER WHERE id=#{user_id})
    </select>

</mapper>