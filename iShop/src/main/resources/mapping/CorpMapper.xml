                #{contact_phone},
            </if>
            <if test="cus_user_code != null">
                #{cus_user_code},
            </if>
            <if test="modified_date != null">
                #{modified_date},
            </if>
            <if test="modifier != null">
                #{modifier},
            </if>
            <if test="created_date != null">
