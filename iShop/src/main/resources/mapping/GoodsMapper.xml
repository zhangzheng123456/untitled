<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.GoodsMapper">

    <resultMap id="GoodsInfo" type="com.bizvane.ishop.entity.Goods">
        <id column="id" property="id"/>
        <result column="goods_code" property="goods_code"/>
        <result column="goods_name" property="goods_name"/>
        <result column="goods_image" property="goods_image"/>
        <result column="goods_price" property="goods_price"/>
        <result column="goods_time" property="goods_time"/>
        <result column="goods_quarter" property="goods_quarter"/>
        <result column="goods_wave" property="goods_wave"/>
        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="isactive" property="isactive"/>
        <result column="created_date" property="created_date"/>
        <result column="creater" property="creater"/>
        <result column="goods_description" property="goods_description"/>
        <result column="corp_code" property="corp_code"/>
        <association property="corp" javaType="com.bizvane.ishop.entity.Corp">
            <result column="corp_name" property="corp_name"/>
            <result column="corp_code" property="corp_code"/>
        </association>
    </resultMap>
    <select id="selectAllGoods" resultMap="GoodsInfo">
        SELECT g.id
        ,g.goods_code
        ,g.goods_name
        ,g.goods_image
        ,g.goods_price
        ,g.goods_time
        ,g.goods_quarter
        ,g.goods_wave
        ,g.modified_date
        ,g.modifier
        ,g.isactive
        ,g.created_date
        ,g.creater
        ,g.goods_description
        ,g.corp_code
        ,cp.corp_name
        ,cp.corp_code
        FROM DEF_GOODS g,DEF_CORP cp
        WHERE g.corp_code=cp.corp_code
        <if test="corp_code!=null and corp_code!=''">
            AND g.corp_code=#{corp_code}
        </if>
        <if test="search_value!=null and search_value!=''">
            AND
            (g.goods_code LIKE concat('%',#{search_value},'%')
            OR g.goods_name LIKE concat('%',#{search_value},'%')
            OR g.goods_price LIKE concat('%',#{search_value},'%')
            OR g.goods_time LIKE concat('%',#{search_value},'%')
            OR g.goods_quarter LIKE concat('%',#{search_value},'%')
            OR g.goods_wave LIKE concat('%',#{search_value},'%')
            OR g.modified_date LIKE concat('%',#{search_value},'%')
            OR g.modifier LIKE concat('%',#{search_value},'%')
            OR g.isactive LIKE concat('%',#{search_value},'%')
            OR g.goods_description LIKE concat('%',#{search_value},'%')
            OR cp.corp_name LIKE concat('%',#{search_value},'%')
            )
        </if>
        ORDER BY g.id
    </select>


    <select id="selectByPrimaryKey" resultMap="GoodsInfo">
         select
         g.id
        ,g.goods_code
        ,g.goods_name
        ,g.goods_image
        ,g.goods_price
        ,g.goods_time
        ,g.goods_quarter
        ,g.goods_wave
        ,g.modified_date
        ,g.modifier
        ,g.isactive
        ,g.created_date
        ,g.creater
        ,g.goods_description
        ,cp.corp_name
        ,cp.corp_code
         from DEF_GOODS g,DEF_CORP cp
         WHERE
          g.corp_code=cp.corp_code  AND
          g.ID=#{id}
    </select>


    <insert id="insert" parameterType="com.bizvane.ishop.entity.Goods">
        insert into DEF_GOODS
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="goods_code!=null  and goods_code!=''">
                goods_code,
            </if>
            <if test="goods_name!=null  and goods_name!=''">
                goods_name,
            </if>
            <if test="goods_image!=null   and goods_image!=''">
                goods_image,
            </if>
            <if test="goods_price!=null  and goods_price!=''">
                goods_price,
            </if>
            <if test="goods_time!=null  ">
                goods_time,
            </if>
            <if test="goods_quarter!=null  and goods_quarter!=''">
                goods_quarter,
            </if>
            <if test="goods_wave!=null  and goods_wave!=''">
                goods_wave,
            </if>
            <if test="modified_date!=null">
                modified_date,
            </if>
            <if test="modifier!=null  and modifier!=''">
                modifier,
            </if>
            <if test="isactive!=null  and isactive!=''">
                isactive,
            </if>
            <if test="created_date!=null">
                created_date,
            </if>
            <if test="creater!=null  and creater!=''">
                creater,
            </if>
            <if test="goods_description!=null and goods_description!=''">
                goods_description,
            </if>
            <if test="corp_code!=null and corp_code!=''">
                corp_code,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="goods_code!=null  and goods_code!=''">
                #{goods_code},
            </if>
            <if test="goods_name!=null  and goods_name!=''">
                #{goods_name},
            </if>
            <if test="goods_image!=null   and goods_image!=''">
                #{goods_image},
            </if>
            <if test="goods_price!=null and goods_price!=''">
                #{goods_price},
            </if>
            <if test="goods_time">
                #{goods_time},
            </if>
            <if test="goods_quarter!=null  and goods_quarter!=''">
                #{goods_quarter},
            </if>
            <if test="goods_wave!=null  and goods_wave!=''">
                #{goods_wave},
            </if>
            <if test="modified_date!=null">
                #{modified_date},
            </if>
            <if test="modifier!=null  and modifier!=''">
                #{modifier},
            </if>
            <if test="isactive!=null  and isactive!=''">
                #{isactive},
            </if>
            <if test="created_date!=null">
                #{created_date},
            </if>
            <if test="creater!=null  and creater!=''">
                #{creater},
            </if>
            <if test="goods_description!=null and goods_description!=''">
                #{goods_description},
            </if>
            <if test="corp_code!=null and corp_code!=''">
                #{corp_code},
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKey" parameterType="com.bizvane.ishop.entity.Goods">
        update DEF_GOODS
        <trim prefix="set" suffixOverrides=",">
            <if test="goods_code!=null and goods_code!=''">
                goods_code=#{goods_code},
            </if>
            <if test="goods_name!=null and goods_name!=''">
                goods_name=#{goods_name},
            </if>
            <if test="goods_image!=null and goods_image!=''">
                goods_image=#{goods_image},
            </if>
            <if test="goods_price!=null and goods_price!=''">
                goods_price=#{goods_price},
            </if>
            <if test="goods_time and goods_time!=''">
                goods_time=#{goods_time},
            </if>
            <if test="goods_quarter!=null and goods_quarter!=''">
                goods_quarter=#{goods_quarter},
            </if>
            <if test="goods_wave!=null and goods_wave!=''">
                goods_wave=#{goods_wave},
            </if>
            <if test="modified_date!=null">
                modified_date=#{modified_date},
            </if>
            <if test="modifier!=null and modifier!=''">
                modifier=#{modifier},
            </if>
            <if test="isactive!=null and isactive!=''">
                isactive=#{isactive},
            </if>
            <if test="created_date!=null">
                created_date=#{created_date},
            </if>
            <if test="creater!=null and creater!=''">
                creater=#{creater},
            </if>
            <if test="goods_description!=null and goods_description!=''">
                goods_description=#{goods_description},
            </if>
            <if test="corp_code!=null and corp_code!=''">
                corp_code=#{corp_code},
            </if>
        </trim>
        where id=#{id}
    </update>

    <delete id="deleteByPrimaryKey">
        delete from
        DEF_GOODS
        where ID=#{id}
    </delete>

    <select id="getGoodsByCode" resultMap="GoodsInfo">
        select * from corp_code=#{corp_code} and goods_code=#{goods_code}
    </select>

    <select id="getGoodsByName" resultMap="GoodsInfo">
        select * from corp_code=#{corp_code} and goods_name=#{goods_name}
    </select>


</mapper>