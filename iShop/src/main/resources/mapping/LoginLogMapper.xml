<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.LogInfoMapper">

    <select id="selectByLogId" resultType="com.bizvane.ishop.entity.LogInfo">
        select *
        from DEF_LOGIN_LOG
        where
        <if test="log_id != 0">
            ID = #{log_id}
        </if>
        <if test="phone != null and phone !=''">
            phone = #{phone}
        </if>
    </select>

    <insert id="insertLoginLog" parameterType="com.bizvane.ishop.entity.LogInfo">
        insert into DEF_LOGIN_LOG
        (PLATFORM,PHONE,CONTENT,CREATED_DATE,MODIFIED_DATE)
        VALUES (#{platform},#{phone},#{content},#{modified_date},#{created_date})
    </insert>

    <update id="updateByLogId" parameterType="com.bizvane.ishop.entity.LogInfo">
        UPDATE DEF_LOGIN_LOG
        SET CONTENT = #{content},
        MODIFIED_DATE = #{modified_date}
            <if test="modifier!=null and modifier!='' ">
                ,MODIFIER = #{modifier}
            </if>
        WHERE ID = #{id};
    </update>

    <delete id="deleteByLogId">
        delete from
        DEF_LOGIN_LOG
        where ID = #{id}
    </delete>
</mapper>