<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.MessageMapper">

    <resultMap type="com.bizvane.ishop.entity.Message" id="MessageInfo">
        <id column="id" property="id"/>
        <result column="message_receiver" property="message_receiver"/>
        <result column="receiver_type" property="receiver_type"/>
        <result column="status" property="status"/>
        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="creater" property="creater"/>
        <result column="created_date" property="created_date"/>
        <result column="isactive" property="isactive"/>
        <association property="corp" javaType="com.bizvane.ishop.entity.Corp">
            <result column="corp_name" property="corp_name"/>
        </association>
        <association property="messageType" javaType="com.bizvane.ishop.entity.MessageType">
            <result column="type_name" property="type_name"/>
        </association>
        <association property="messageInfo" javaType="com.bizvane.ishop.entity.MessageInfo">
            <result column="message_sender" property="message_sender"/>
            <result column="message_title" property="message_title"/>
            <result column="message_content" property="message_content"/>
            <result column="message_type" property="message_type"/>
            <result column="corp_code" property="corp_code"/>
        </association>
    </resultMap>

    <select id="selectAllMessage" resultMap="MessageInfo">
        select rum.id,
        u1.user_name message_receiver,
        rum.receiver_type,
        rum.status,
        u2.user_name message_sender ,
        dum.message_title,
        dum.message_content,
        dum.message_type,
        c.corp_name,
        mt.type_description,
        rum.modified_date,
        rum.modifier,
        rum.isactive
        from def_user_message dum,rel_user_message rum ,def_corp c,def_message_type mt,def_user u1,def_user u2
        where dum.corp_code = c.corp_code
        AND dum.corp_code = u1.corp_code
        AND dum.corp_code = u2.corp_code
        AND rum.message_receiver = u1.user_code
        AND dum.message_sender = u2.user_code
        AND dum.message_code = rum.message_code
        AND dum.message_type = mt.type_code
        <if test="corp_code!=null and corp_code!=''">
            and dum.corp_code=#{corp_code}
        </if>
        <if test="user_code!=null and user_code!=''">
            and dum.message_sender=#{user_code}
        </if>
        <if test="search_value!=null and search_value!=''">
            and
            (
            dum.message_sender like concat('%',search_value,'%')
            OR dum.message_title like concat('%',search_value,'%')
            OR dum.message_content like concat('%',search_value,'%')
            OR rum.message_receiver like concat('%',search_value,'%')
            OR rum.status like concat('%',search_value,'%')
            OR c.corp_name like concat('%',search_value,'%')
            OR mt.type_description like concat('%',search_value,'%')
            OR dum.modified_date like concat('%',search_value,'%')
            OR dum.modifier like concat('%',search_value,'%')
            OR dum.isactive like concat('%',search_value,'%')
            )
        </if>
        ORDER BY rum.id DESC
    </select>

    <select id="selectByPrimaryKey" resultMap="MessageInfo">
        select rum.id,
        u1.user_name message_receiver,
        rum.receiver_type,
        rum.status,
        u2.user_name message_sender ,
        dum.message_title,
        dum.message_content,
        dum.message_type,
        c.corp_name,
        mt.type_description,
        rum.modified_date,
        rum.modifier,
        rum.isactive
        from def_user_message dum,rel_user_message rum ,def_corp c,def_message_type mt,def_user u1,def_user u2
        where dum.corp_code = c.corp_code
        AND dum.corp_code = u1.corp_code
        AND dum.corp_code = u2.corp_code
        AND rum.message_receiver = u1.user_code
        AND dum.message_sender = u2.user_code
        AND dum.message_code = rum.message_code
        AND dum.message_type = mt.type_code
        AND rum.id=#{id}
    </select>

    <delete id="deleteByPrimaryKey">
        DELETE  FROM  rel_user_message where id=#{id}
    </delete>

