<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.MessageMapper">


    <resultMap type="com.bizvane.ishop.entity.Message" id="MessageInfo">
        <id column="id" property="id"/>
        <result column="tem_code" property="tem_code"/>
        <result column="tem_name" property="tem_name"/>
        <result column="tem_content" property="tem_content"/>
        <result column="isactive" property="isactive"/>
        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="creater" property="creater"/>
        <result column="created_date" property="created_date"/>
        <result column="corp_code" property="corp_code"/>
        <result column="type_code" property="type_code"/>
        <association property="corp" javaType="com.bizvane.ishop.entity.Corp">
            <result column="corp_name" property="corp_name"/>
        </association>
        <association property="message_type" javaType="com.bizvane.ishop.entity.Message_type">
            <result column="type_name" property="type_name"/>
        </association>
    </resultMap>

    <delete id="deleteByPrimaryKey">
        DELETE  FROM  DEF_MESSAGE where id=#{id}
    </delete>

    <insert id="insert" parameterType="com.bizvane.ishop.entity.Message">
        insert into DEF_MESSAGE
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tem_code!=null and tem_code!=''">
                tem_code,
            </if>
            <if test="tem_name!=null and tem_name!='">
                tem_name,
            </if>
            <if test="tem_content!=null and tem_content!=''">
                tem_content,
            </if>
            <if test="isactive!=null and  isactive!=''">
                isactive,
            </if>
            <if test="corp_code!=null and corp_code!=''">
                corp_code,
            </if>
            <if test="modifer!=null and modifier!=''">
                modifier,
            </if>
            <if test="modified_date!=null and modified_date!=''">
                modified_date,
            </if>

            <if test="creater!=null and creater!=''">
                creater,
            </if>

            <if test="created_date!=null and created_date!=''">
                created_date,
            </if>

            <if test="type_code!=null type_code!=''">
                type_code,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="tem_code!=null and tem_code!=''">
                #{tem_code},
            </if>
            <if test="tem_name!=null and tem_name!='">
                #{tem_name},
            </if>
            <if test="tem_content!=null and tem_content!=''">
                #{tem_content},
            </if>
            <if test="isactive!=null and  isactive!=''">
                #{isative},
            </if>
            <if test="corp_code!=null and corp_code!=''">
                #{corp_code},
            </if>
            <if test="modifier!=null and modifier!=''">
                #{modifier},
            </if>
            <if test="modified_date!=null and modified_date!=''">
                #{modified_date},
            </if>
            <if test="creater!=null and creater!=''">
                #{creater},
            </if>
            <if test="created_date!=null and created_date!=''">
                #{created_date},
            </if>
            <if test="type_code!=null type_code!=''">
                #{type_code},
            </if>
        </trim>
    </insert>

    <select id="selectByPrimaryKey" resultType="com.bizvane.ishop.entity.Message">
         select * from DEF_MESSAGE where id=#{id}
     </select>

    <update id="updateByPrimaryKey" parameterType="com.bizvane.ishop.entity.Message">
        update DEF_MESSAGE
        <trim prefix="set " suffixOverrides=",">
            <if test="tem_code!=null and tem_code!=''">
                tem_code=#{tem_code},
            </if>
            <if test="tem_name!=null and tem_name!='">
                tem_name=#{tem_name},
            </if>
            <if test="tem_content!=null and tem_content!=''">
                tem_content=#{tem_content},
            </if>
            <if test="isactive!=null and  isactive!=''">
                isactive=#{isactive},
            </if>
            <if test="corp_code!=null and corp_code!=''">
                corp_code=#{corp_code},
            </if>
            <if test="modifier!=null and modifier!=''">
                modifier=#{modifier},
            </if>
            <if test="modified_date!=null and modified_date!=''">
                modified_date=#{modified_date},
            </if>
            <if test="creater!=null and creater!=''">
                creater=#{creater}
            </if>
            <if test="created_date!=null and created_date!=''">
                created_date=#{created_date},
            </if>
            <if test="type_code!=null type_code!=''">
                type_code=#{type_code},
            </if>
        </trim>
    </update>


    <select id="selectAllMessage" resultMap="MessageInfo">
        select
        dm.*,
        dc.corp_name,
        dmt.type_name
        from DEF_MESSAGE dm,DEF_MESSAGE,DEF_CORP dc,DEF_MESSAGE_TYPE dmt
        WHERE dm.corp_code=dc.corp_code and
        dm.corp_code=dmt.corp_code and
        dm.type_code=dmt.type_code
        <if test="corp_code!=null and corp_code!=''">
            and dm.corp_code=#{corp_code}
        </if>
        <if test="search_value!=null and search_value!=''">
            and
            ( dm.id like concat('%',search_value,'%') OR
            dm.tem_code like concat('%',search_value,'%') OR
            dm.tem_name like concat('%',search_value,'%') OR
            dm.tem_content like concat('%',search_value,'%') OR
            dc.corp_name like concat('%',search_value,'%') OR
            dmt.type_name like concat('%',search_value,'%') OR
            dm.modified_date like concat('%',search_value,'%') OR
            dm.created_date like concat('%',search_value,'%')
            )
        </if>
        ORDER BY dm.id
    </select>


