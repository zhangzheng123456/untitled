    <select id="selectByUser" resultMap="MessageInfo">
        select * from DEF_MESSAGE,DEF_USER
        where DEF_MESSAGE.creater=DEF_USER.user_code,
        and DEF_MESSAGE.CORP_CODE=#{corp_code},
        and DEF_USER=#{user_code}
        <if test="search_value!=null and search_value!=''">
            and
            (
            DEF_MESSAGE.tem_code like concat('%',#{search_value},'%') or
            DEF_MESSAGE.tem_name like concat('%',#{search_value},'%') or
            DEF_MESSAGE.tem_content like concat('%',#{search_value},'%') or
            DEF_MESSAGE.isactive like concat('%',#{search_value},'%') or
            DEF_USER.USER_NAME like concat('%',#{search_value},'%')
            )
        </if>
        order by DEF_USER.ID
    </select>

    <select id="selectPartMessage" resultMap="MessageInfo">
        select
        DEF_MESSAGE.*
        from DEF_USER,DEF_GROUP,DEF_CORP,DEF_MESSAGE
        where DEF_USER.group_code = DEF_GROUP.group_code
        AND DEF_USER.corp_code = DEF_CORP.corp_code
        AND DEF_USER.corp_code = DEF_GROUP.corp_code
        AND DEF_USER.CORP_CODE=#{corp_code}
        AND DEF_MESSAGE.creater=DEF_USER.USER_CODE
        AND DEF_GROUP.ROLE_CODE &lt; #{role_code}
        AND
        <foreach collection="array" index="index" item="item" open="(" separator="or" close=")">
            store_code regexp #{item}
        </foreach>
        <if test="search_value!=null and search_value!=''">
            and
            (
            DEF_MESSAGE.id like concat('%',#{search_value},'%') OR
            DEF_MESSAGE.tem_code like concat('%',#{search_value},'%') OR
            DEF_MESSAGE.tem_name like concat('%',search_value,'%') OR
            DEF_MESSAGE.tem_content like concat('%',search_value,'%') OR
            DEF_CORP.corp_name like concat('%',search_value,'%')
            )
        </if>
        ORDER BY DEF_MESSAGE.ID
    </select>

    <select id="selectByCode" resultMap="MessageInfo">
        select * from def_message
        where
        corp_code=#{corp_code}
        and
        tem_code=#{tem_code}
    </select>
</mapper>