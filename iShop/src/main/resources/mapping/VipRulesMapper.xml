    <select id="selectVipRulesScreen" resultMap="VipRules">
        SELECT
        dvr.id,
        dvr.corp_code,
        dvr.vip_type,
        dvr.high_vip_type,
        dvr.discount,
        dvr.join_threshold,
        dvr.upgrade_time,
