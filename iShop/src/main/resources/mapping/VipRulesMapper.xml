    <select id="selectById" resultMap="VipRules">
        SELECT
          dvr.id,
          dvr.corp_code,
          dvr.vip_type,
          dvr.high_vip_type,
          dvr.discount,
          dvr.join_threshold,
          dvr.upgrade_time,
          dvr.upgrade_amount,
          dvr.points_value,
          dvr.present_point,
          dvr.present_coupon,
          dvr.modified_date,
          dvr.modifier,
          dvr.created_date,
          dvr.creater,
          dvr.isactive,
           dc.corp_name
        FROM def_vip_rules dvr,def_corp dc
        WHERE dvr.corp_code = dc.corp_code
        AND  dvr.ID=#{id}
    </select>

    <select id="selectAllVipRules" resultMap="VipRules">
        SELECT
        dvr.id,
