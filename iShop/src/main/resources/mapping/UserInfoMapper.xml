<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bizvane.ishop.dao.UserInfoMapper">

    <select id="selectByUserId" resultType="com.bizvane.ishop.entity.UserInfo">
        select *
        from DEF_USER
        where
        <if test="user_id != 0">
            ID = #{corp_id}
        </if>
        <if test="phone != null and phone !=''">
            PHONE = #{phone}
        </if>
    </select>
    <select id="selectLogin" resultType="com.bizvane.ishop.entity.UserInfo">
        select *
        from DEF_USER
        where PHONE = #{0} AND PASSWORD = #{1}
    </select>
    <select id="selectAllUser" resultType="com.bizvane.ishop.entity.UserInfo">
        select *
        from DEF_USER
        where 1 = 1
        <if test="corp_code != null and corp_code !=''">
            AND CORP_CODE = #{corp_code}
        </if>
        <if test="search_value != null and search_value !=''">
            AND USER_NAME like #{search_value}
            OR ID like #{search_value}
            OR USER_CODE like #{search_value}
            OR PHONE like #{search_value}
            OR SEX like #{search_value}
            OR ROLE_CODE like #{search_value}
            OR LOGIN_TIME_RECENTLY like #{search_value}
            OR MODIFIED_DATE like #{search_value}
            OR MODIFIER like #{search_value}
            OR ISACTIVE like #{search_value}
        </if>
        ORDER BY ID
    </select>

    <select id="selectUserCode" resultType="com.bizvane.ishop.entity.UserInfo">
    select *
    from DEF_USER
    WHERE
    USER_CODE = #{0} AND CORP_CODE = #{1}
</select>

    <delete id="deleteByUserId">
        delete from
        DEF_USER
        where ID = #{id}
    </delete>
    <insert id="insertUser" parameterType="com.bizvane.ishop.entity.UserInfo">
        insert into DEF_USER
