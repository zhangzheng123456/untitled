            </if>
            <if test="sex!=null">
                sex,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="birthday!=null">
                birthday,
            </if>
            <if test="corp_code!=null">
                corp_code,
            </if>
            <if test="store_code!=null">
                store_code,
            </if>
            <if test="role_code!=null">
                role_code,
            </if>
            <if test="login_time_recently!=null">
                login_time_recently,
            </if>
            <if test="modified_date != null">
                MODIFIED_DATE,
            </if>
            <if test="modifier != null">
                MODIFIER,
            </if>
            <if test="created_date != null">
