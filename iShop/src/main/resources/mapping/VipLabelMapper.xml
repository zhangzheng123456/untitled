<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.bizvane.ishop.dao.VipLabelMapper">
    <resultMap id="VipLabels" type="com.bizvane.ishop.entity.VipLabel">
        <id column="id" property="id"/>
        <result column="label_name" property="label_name"/>
        <result column="corp_code" property="corp_code"/>
        <result column="modified_date" property="modified_date"/>
        <result column="modifier" property="modifier"/>
        <result column="created_date" property="created_date"/>
        <result column="creater" property="creater"/>
        <result column="isactive" property="isactive"/>
        <result column="label_type" property="label_type"/>
        <association property="corp" javaType="com.bizvane.ishop.entity.Corp">
            <result column="corp_name" property="corp_name"/>
        </association>
        <association property="viplablegroup" javaType="com.bizvane.ishop.entity.ViplableGroup">
            <result column="label_group_name" property="label_group_name"/>
        </association>
    </resultMap>


    <select id="selectByPrimaryKey" resultMap="VipLabels">
         SELECT
        vt.id,
        vt.label_name,
        vt.label_type,
        vt.corp_code,
        vt.modified_date,
        vt.modifier,
        vt.created_date,
        vt.creater,
        vt.isactive,
        cc.corp_name,
        vt.label_group_code,
        dvg.label_group_name
        FROM
        def_viplabel vt,DEF_CORP cc
        ,def_viplabel_group dvg
        WHERE
        vt.corp_code=cc.corp_code AND
        vt.label_group_code=dvg.label_group_code AND
        cc.corp_code=dvg.corp_code
        and  vt.id=#{id}
    </select>


    <insert id="insert" parameterType="com.bizvane.ishop.entity.VipLabel">
        INSERT INTO def_viplabel
        <trim prefix="(" suffixOverrides="," suffix=")">

            <if test="label_name!=null ">
                label_name ,
            </if>
            <if test="label_type!=null ">
                label_type,
            </if>
            <if test="corp_code!=null ">
                corp_code ,
            </if>
            <if test="modified_date!=null ">
                modified_date ,
            </if>
            <if test="modifier!=null ">
                modifier,
            </if>
            <if test="created_date!=null">
                created_date ,
            </if>
            <if test="creater!=null ">
                creater,
            </if>
            <if test="isactive!=null ">
                isactive,
            </if>
            <if test="label_group_code!=null ">
                label_group_code,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">

            <if test="label_name!=null ">
                #{label_name} ,
            </if>
            <if test="label_type!=null ">
                #{label_type},
            </if>
            <if test="corp_code!=null ">
                #{corp_code},
            </if>
            <if test="modified_date!=null">
                #{modified_date} ,
            </if>
            <if test="modifier!=null ">
                #{modifier},
            </if>
            <if test="created_date!=null">
                #{created_date},
            </if>
            <if test="creater!=null ">
                #{creater},
            </if>
            <if test="isactive!=null ">
                #{isactive},
            </if>
            <if test="label_group_code!=null ">
                #{label_group_code},
            </if>
        </trim>

    </insert>


    <update id="updateByPrimaryKey" parameterType="com.bizvane.ishop.entity.VipLabel">
        update def_viplabel
        <trim prefix="set " suffixOverrides=",">

            <if test="label_name!=null ">
                label_name=#{label_name} ,
            </if>
            <if test="label_type!=null ">
                label_type=#{label_type},
            </if>
            <if test="corp_code!=null ">
                corp_code=#{corp_code},
            </if>
            <if test="modified_date!=null ">
                modified_date=#{modified_date} ,
            </if>
            <if test="modifier!=null ">
                modifier=#{modifier},
            </if>
            <if test="created_date!=null ">
                created_date=#{created_date},
            </if>
            <if test="creater!=null ">
                creater=#{creater},
            </if>
            <if test="isactive!=null ">
                isactive=#{isactive},
            </if>
            <if test="label_group_code!=null ">
                label_group_code=#{label_group_code},
            </if>
        </trim>
        WHERE id=#{id}
    </update>


    <delete id="deleteByPrimaryKey">
        delete from def_viplabel
        WHERE id=#{id}
    </delete>


    <select id="selectAllVipLabel" resultMap="VipLabels">
        SELECT
        vt.id,
        vt.label_name,
        vt.label_type,
        vt.corp_code,
        vt.modified_date,
        vt.modifier,
        vt.created_date,
        vt.creater,
        vt.isactive,
        cc.corp_name,
        vt.label_group_code,
        dvg.label_group_name
        FROM
        def_viplabel vt,DEF_CORP cc
        ,def_viplabel_group dvg
        WHERE
        vt.corp_code=cc.corp_code AND
        vt.label_group_code=dvg.label_group_code AND
        cc.corp_code=dvg.corp_code
        <if test="corp_code!=null and corp_code!=''">
            and vt.corp_code=#{corp_code}
        </if>
        <if test="search_value!=null and search_value!=''">
            and
            (
            vt.id like concat('%',#{search_value},'%')
            or vt.label_name like concat('%',#{search_value},'%')
            or vt.label_type like concat('%',#{search_value},'%')
            or cc.corp_name like concat('%',#{search_value},'%')
            or dvg.label_group_name like concat('%',#{search_value},'%')
            )
        </if>
        ORDER BY vt.id DESC
    </select>
    <select id="selectAllViplabelScreen" resultMap="VipLabels">
        SELECT
        vt.*,
        cc.corp_name,
        dvg.label_group_name
        FROM
        def_viplabel vt,DEF_CORP cc
        ,def_viplabel_group dvg
        WHERE
        vt.corp_code=cc.corp_code AND
        vt.label_group_code=dvg.label_group_code AND
        cc.corp_code=dvg.corp_code
        <if test="corp_code!=null and corp_code!=''">
            and vt.corp_code=#{corp_code}
        </if>
        AND
        <foreach collection="map" index="entryKey" item="entryValue" open="(" close=")" separator="and">
            <choose>
                <when test="entryValue!='' and entryKey=='corp_name'">
                    cc.${entryKey} LIKE concat('%',#{entryValue},'%')
                </when>
                <when test="entryValue!='' and entryKey=='label_group_name'">
                    dvg.${entryKey} LIKE concat('%',#{entryValue},'%')
                </when>
                <when test="entryValue!=''">
                    vt.${entryKey} LIKE concat('%',#{entryValue},'%')
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
        </foreach>
        ORDER BY vt.id DESC
    </select>

    <select id="selectVipLabelName" resultType="com.bizvane.ishop.entity.VipLabel">
        select * from def_viplabel
         where
         label_name=#{label_name}
         and
        corp_code=#{corp_code}
    </select>
</mapper>
